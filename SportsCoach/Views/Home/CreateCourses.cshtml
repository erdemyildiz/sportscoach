@{ Layout = null;}

@model Entity.Models.Courses



@{
    ViewBag.Title = "CreateCourses";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="form_main">
                <h4 class="heading"><strong>Create </strong> Courses <span></span></h4>
                <div class="form">
                    @using (Html.BeginForm("CreateCourses", "Home", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary()
                            </div>
                        }

                        @Html.TextBoxFor(x => x.CoursesName, new { @class = "txt", @placeholder = "CoursesName", @required = "required" })

                        @Html.TextBoxFor(x => x.Description, new { @class = "txt", @placeholder = "Description", @required = "required" })

                        

                        <input name="resim" type="file" />



                        <input type="submit" value="submit" name="submit" class="txt2">
                    }
                </div>
            </div>
        </div>
    </div>
</div>