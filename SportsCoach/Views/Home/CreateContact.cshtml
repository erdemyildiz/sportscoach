@{ Layout = null;}

@model Entity.Models.Contact



@{
    ViewBag.Title = "CreateContact";
}


<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="form_main">
                <h4 class="heading"><strong>Create </strong> Contact <span></span></h4>
                <div class="form">
                    @using (Html.BeginForm("CreateContact", "Home", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                @Html.ValidationSummary()
                            </div>
                        }

                        @Html.TextBoxFor(x => x.Name, new { @class = "txt", @placeholder = "Name", @required = "required" })

                        @Html.TextBoxFor(x => x.Email, new { @class = "txt", @placeholder = "Email", @required = "required" })

                        @Html.TextBoxFor(x => x.Message, new { @class = "txt", @placeholder = "Message", @required = "required" })

                        

                        



                        <input type="submit" value="submit" name="submit" class="txt2">
                    }
                </div>
            </div>
        </div>
    </div>
</div>